      </div>
    </a>
  </div>

  <!-- Modal for secret -->
  <div class="modal fade" id="addSecret" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalScrollableTitle">New Record</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="../secrets/add" method="POST" id="form">
            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="Enter Title" name="title" id="title"
                  class="form-control form-control-lg" required />
              </div>
            </div>
            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="Enter Your Email or Username" name="login" id="login"
                  class="form-control form-control-lg" required />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                  else.</small>
              </div>
            </div>
            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="password" name="password" placeholder="Type or Generate Password" id="password"
                  class="form-control form-control-lg" required />
              </div>
            </div>

            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="https://" name="website_address" id="website_address"
                  class="form-control form-control-lg" required />
              </div>
            </div>

            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="Keep note" name="note" id="note" class="form-control form-control-lg"
                  required />
              </div>
            </div>

            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary form-control-lg btn-block" required />
              </div>
            </div>
            </form>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>

  <!-- Modal for payment secret -->
  <div class="modal fade" id="addPaymentSecret" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalScrollableTitle">New Payment Card</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form action="#" method="POST" id="form">
            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="Enter Title" name="title" id="title"
                  class="form-control form-control-lg" required />
              </div>
            </div>
            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="Enter Your Email or Username" name="email" id="Email"
                  class="form-control form-control-lg" required />
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                  else.</small>
              </div>
            </div>
            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="password" name="password" placeholder="Type or Generate Password" id="password"
                  class="form-control form-control-lg" required />
              </div>
            </div>

            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="https://" name="address" id="address"
                  class="form-control form-control-lg" required />
              </div>
            </div>

            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="text" placeholder="Keep note" name="note" id="note" class="form-control form-control-lg"
                  required />
              </div>
            </div>

            <div class="col-lg-10 offset-lg-1">
              <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary form-control-lg btn-block" required />
              </div>
            </div>
            </form>
          </form>
        </div>
      </div>
    </div>
  </div>
  </div>

  <!-- Model for user profile -->
  <div class="modal fade" id="user-profile" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalScrollableTitle">Account</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

        </div>
      </div>
    </div>
  </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12 offset-md-1">
        <div class="secret-box">
        <%- include('./partials/messages.ejs') %>
        <table class="table table-striped table-hover" style="font-size: smaller;">
          <thead>
            <tr>
              <th scope="col">RECORD ID</th>
              <th scope="col">TITLE</th>
              <th scope="col">LAST MODIFIED</th>
            </tr>
          </thead>
          <tbody>
            <%
              secrets.forEach((secret)=> { %>
              <tr  onclick="chala();">
                <th scope="row"><%= secret.id %></th>
                <td><span class="material-icons" style="vertical-align: bottom;">
                  text_snippet
                </span><%= secret.title %></td>
                <td><%= secret.last_modified.slice(0, -22) %>-<%= user.username%></td>
              </tr>
            <%});%>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
