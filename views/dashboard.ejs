  <!-- sidebar -->
  <div class="sidebar-container">
    <div class="sidebar-logo">
      <!-- Example single danger button -->
      <div class="btn-group">
        <button type="button" class="btn btn-info dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="material-icons" style="vertical-align: bottom;">
            add
          </span>New
        </button>
        <div class="dropdown-menu">
          <span class="dropdown-item" style="font-size: smaller;">create new</span>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="#"  data-toggle="modal" data-target="#addSecret">Record</a>
          <a class="dropdown-item" href="#"  data-toggle="modal" data-target="#addPaymentSecret">Payment Card</a>
